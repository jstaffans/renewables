{% macro data_label(text) -%}
  <svg
    class="generation-chart__data-label"
    x="-100"
    y="-100"
    width="100"
    height="100"
    data-locator="{{text|replace(' ', '-')|replace('*', '')}}">
    <circle cx="50" cy="50" r="40" />
    <text x="50%" y="50%" text-anchor="middle" dy=".3em">
      {{text}}
    </text>
  </svg>
{%- endmacro %}
